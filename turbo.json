{
	"$schema": "https://turbo.build/schema.json",
	"globalEnv": ["SOMBRERO_NPM_TOKEN"],
	"ui": "tui",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"outputLogs": "new-only"
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"outputLogs": "new-only"
		}
	}
}
